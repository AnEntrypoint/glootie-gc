{
  "name": "glootie-gc",
  "version": "2.0.9",
  "description": "Advanced Gemini CLI extension with WFGY integration, MCP tools, and automated hooks",
  "author": {
    "name": "AnEntrypoint",
    "url": "https://github.com/AnEntrypoint"
  },
  "mcpServers": {
    "glootie": {
      "command": "npx",
      "args": ["-y", "gxe@latest", "AnEntrypoint/mcp-glootie"],
      "timeout": 360000
    },
    "dev-server": {
      "command": "npx",
      "args": ["-y", "gxe@latest", "AnEntrypoint/dev-mcp"],
      "timeout": 360000
    },
    "code-search": {
      "command": "npx",
      "args": ["-y", "gxe@latest", "AnEntrypoint/code-search"],
      "timeout": 360000
    }
  },
  "hooks": {
    "BeforeTool": [
      {
        "name": "glootie-gc-before-tool",
        "type": "command",
        "matcher": "*",
        "command": "node \"${extensionPath}/pre-tool-use-hook.js\"",
        "timeout": 10000
      }
    ],
    "SessionStart": [
      {
        "name": "glootie-gc-session-start",
        "type": "command",
        "command": "node \"${extensionPath}/prompt-submit-hook.js\"",
        "timeout": 7200000
      }
    ],
    "Stop": [
      {
        "name": "glootie-gc-stop",
        "type": "command",
        "command": "node \"${extensionPath}/stop-hook.js\"",
        "timeout": 7200000
      }
    ]
  },
  "commands": {
    "finish": {
      "command": "node",
      "args": [
        "stop-hook.js"
      ],
      "description": "Run pre-stop checks (git sync, evals)"
    }
  }
}